<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.johny.bioscopetvnew" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".BioscopeTVApplication"
        android:allowBackup="true"
        android:icon="@mipmap/bioscope_launch_icon_full_tail"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListEventStreamsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".StartBroadcastActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/title_activity_preferences"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".TermsofuseActivity"
            android:label="@string/title_activity_termsofuse"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>
